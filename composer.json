{
    "name": "rockberpro/rosa-router",
    "description": "Smart REST router for PHP",
    "license": "MIT",
    "config": {
        "platform": {
            "php": "8.4"
        }
    },
    "require": {
        "php": ">=8.0",
        "react/http": "^1.11",
        "monolog/monolog": "3.9",
        "symfony/http-foundation": "7.3",
        "symfony/dotenv": "7.3",
        "ext-json": "*",
        "ext-pdo": "*"
    },
    "autoload": {
        "psr-4": {
            "Rockberpro\\RestRouter\\": "src/",
            "Rockberpro\\RestRouter\\Controllers\\": "controllers/",
            "Rockberpro\\RestRouter\\Routes\\": "routes/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "symfony/var-dumper": "^5.4"
    }
}
